{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skill Graph Schema",
  "type": "object",
  "required": [
    "version",
    "nodes",
    "edges"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "palette": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "label",
          "tier",
          "kind",
          "xp_to_level"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[A-Za-z0-9._-]+$"
          },
          "label": {
            "type": "string"
          },
          "tier": {
            "type": "integer",
            "minimum": 1
          },
          "kind": {
            "type": "string",
            "enum": [
              "core",
              "concept",
              "algebra",
              "statistics",
              "calculus",
              "boss"
            ]
          },
          "requires": {
            "type": [
              "object",
              "null"
            ],
            "properties": {
              "all_of": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "any_of": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "min_level": {
                "type": "integer",
                "minimum": 0,
                "default": 1
              }
            },
            "additionalProperties": false
          },
          "boss": {
            "type": [
              "string",
              "null"
            ]
          },
          "xp_per_try": {
            "type": "integer",
            "minimum": 0
          },
          "xp_per_correct": {
            "type": "integer",
            "minimum": 0
          },
          "xp_to_level": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "minItems": 1
          },
          "lens": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "micro_skills": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "misconceptions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "lrc_min": {
            "type": [
              "object",
              "null"
            ],
            "properties": {
              "acc": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "rt_pct": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "explanation": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              }
            },
            "additionalProperties": false
          },
          "i18n": {
            "type": [
              "object",
              "null"
            ]
          }
        },
        "additionalProperties": false
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "from",
          "to",
          "type"
        ],
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "requires",
              "enables"
            ]
          },
          "lens": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}